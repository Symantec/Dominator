{
    "BootstrapStreams": {
	"bootstrap/CentOS-6": {
	    "BootstrapCommand": [
		"yumbootstrap",
		"centos-6",
		"$dir"
	    ],
	    "FilterLines": [
		"/etc/fstab",
		"/var/log/.*"
	    ],
	    "PackagerType": "rpm"
	},
	"bootstrap/CentOS-7": {
	    "BootstrapCommand": [
		"yumbootstrap",
		"centos-7",
		"$dir"
	    ],
	    "FilterLines": [
		"/etc/fstab",
		"/var/log/.*"
	    ],
	    "PackagerType": "rpm"
	},
	"bootstrap/Debian-9": {
	    "BootstrapCommand": [
		"debootstrap",
		"--arch=amd64",
		"stretch",
		"$dir",
		"http://mirror.company.com/debian"
	    ],
	    "FilterLines": [
		"/etc/hostname",
		"/etc/machine-id",
		"/var/log/.*"
	    ],
	    "PackagerType": "deb"
	},
	"bootstrap/Debian-10": {
	    "BootstrapCommand": [
		"debootstrap",
		"--arch=amd64",
		"buster",
		"$dir",
		"http://mirror.company.com/debian"
	    ],
	    "FilterLines": [
		"/etc/hostname",
		"/etc/machine-id",
		"/var/log/.*"
	    ],
	    "PackagerType": "deb"
	},
        "bootstrap/Ubuntu-14.04": {
	    "BootstrapCommand": [
		"debootstrap",
		"--arch=amd64",
		"trusty",
		"$dir",
		"http://mirror.company.com/ubuntu"
	    ],
	    "FilterLines": [
		"/etc/fstab",
		"/etc/hostname",
		"/var/log/.*"
	    ],
	    "PackagerType": "deb"
	}
    },
    "ImageStreamsUrl": "file:///etc/imaginator/image-streams.json",
    "PackagerTypes": {
	"deb": {
	    "CleanCommand": [
		"apt-get",
		"clean"
	    ],
	    "InstallCommand": [
		"apt-get",
		"-q",
		"-y",
		"--no-install-recommends",
		"install"
	    ],
	    "ListCommand": {
		"ArgList": [
		    "dpkg-query",
		    "-f",
		    "${binary:Package} ${Version} ${Installed-Size}\n",
		    "--show"
		],
		"SizeMultiplier": 1024
	    },
	    "RemoveCommand": [
		"apt-get",
		"-q",
		"--purge",
		"-y",
		"--allow-remove-essential",
		"remove"
	    ],
	    "UpdateCommand": [
		"apt-get",
		"-q",
		"-y",
		"update"
	    ],
	    "UpgradeCommand": [
		"apt-get",
		"-q",
		"-y",
		"-o",
		"Dpkg::Options::=--force-confold",
		"dist-upgrade"
	    ],
	    "Verbatim": [
		"export DEBIAN_FRONTEND=noninteractive"
	    ]
	},
	"rpm": {
	    "CleanCommand": [
		"yum",
		"clean",
		"all"
	    ],
	    "InstallCommand": [
		"yum",
		"-q",
		"-y",
		"install"
	    ],
	    "ListCommand": {
		"ArgList": [
		    "rpm",
		    "-qa",
		    "--queryformat",
		    "%{NAME} %{VERSION}_%{RELEASE} %{SIZE}\n"
		]
	    },
	    "RemoveCommand": [
		"yum",
		"-q",
		"-y",
		"remove"
	    ],
	    "UpdateCommand": [
		"yum",
		"-q",
		"-y",
		"makecache"
	    ],
	    "UpgradeCommand": [
		"yum",
		"-q",
		"-y",
		"update"
	    ]
	}
    }
}
